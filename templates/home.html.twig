                <div class="card-header">
                {{ plat.libelle }}
                </div>
                <div class="card-link mb-3">
                <a href="{{ path('detail.plat', {'id': plat.id}) }}"><img src="{{ asset('images_the_district/plat/mini/300x300-' ~ plat.image ) }}" width=100%></a>
